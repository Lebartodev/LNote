<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LNote.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/black_40</item>
    </style>

    <style name="NoteCreation.FullScreenButton">
        <item name="android:src">@drawable/ic_full_screen_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">FullScreenButton</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoteCreation.DeleteButton">
        <item name="android:src">@drawable/ic_delete_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">DeleteButton</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoteCreation.CalendarButton">
        <item name="android:src">@drawable/ic_date_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">CalendarButton</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoteCreation.SaveButton">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:transitionName">Save</item>
        <item name="android:text">@string/save_button_text</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance" tools:override="true">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoteCreation.DateChip">
        <item name="android:visibility">gone</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <style name="NoteCreation.Content">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="BackButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

</resources>
