<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LNote" />
    
    <style name="LNote.Text.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LNote.Text.Description">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LNote.Text" />

    <style name="LNote.Divider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_12</item>
    </style>

    <style name="NoteCreation" />

    <style name="NoteCreation.Title" parent="LNote.Text.Title">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/title_hint</item>
        <item name="android:inputType">textCapSentences|textAutoComplete|textNoSuggestions</item>
    </style>

    <style name="NoteCreation.DateChip">
        <item name="android:visibility">gone</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <style name="NoteCreation.Content">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="NoteCreation.FullScreenButton">
        <item name="android:src">@drawable/ic_full_screen_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">FullScreenButton</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoteCreation.DeleteButton">
        <item name="android:src">@drawable/ic_delete_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">DeleteButton</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoteCreation.CalendarButton">
        <item name="android:src">@drawable/ic_date_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">CalendarButton</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoteCreation.SaveButton">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:transitionName">Save</item>
        <item name="android:text">@string/save_button_text</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="BackButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="NoteCreation.Divider" parent="LNote.Divider">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:transitionName">Divider</item>
    </style>

    <style name="NoteCreation.Description" parent="LNote.Text.Description">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/enter_note_hint</item>
        <item name="android:inputType">
            textCapSentences|textAutoComplete|textMultiLine|textNoSuggestions
        </item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>